@model TechShop.Web.Models.UserProfileViewModel
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="flat-row flat-iconbox">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="title-section">
                    <h2 class="title">
                        Account
                    </h2>
                </div>
            </div>
        </div>

        <div class="col-md-10">
            <h3 class="center">@Model.User.Name</h3>
            <hr /><br />

            <div>
                <h4>Change your account settings</h4>
                <hr />
                <div class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-md-2 control-label">Password: </label>
                        <div class="col-md-10">
                            <a href="@Url.Action("ChangePassword", "Manage")" class="btn-bracketed">Change Password</a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 control-label">Billing address: </label>
                        <div class="col-md-10">
                            <a href="@Url.Action("UpdateUserAccount", "Manage")" class="btn-bracketed">Edit Billing Address</a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 control-label">Order's history: </label>
                        <div class="col-md-10">
                            <a href="@Url.Action("OrderHistory", "Manage")" class="btn-bracketed">View</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

